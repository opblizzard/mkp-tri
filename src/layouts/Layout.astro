---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/globals.css";

const { title = "MKP-TRI", description = "Living Codex for Mythic Operations" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-codex-gradient min-h-screen">
    <Header />
    <main class="pt-20 pb-12 px-2 sm:px-6">
      <slot />
    </main>
    <Footer />
  </body>
</html>
