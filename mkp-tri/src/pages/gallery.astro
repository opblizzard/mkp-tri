---
import Layout from "@components/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---

<Layout title="MKP-TRI · Model Gallery" description="A gallery of creative models and artifacts.">
  <Header />
  <section>
    <h2 class="text-lg font-semibold mb-2">Model Gallery</h2>
    <p class="text-sm text-mkp-muted mb-4">
      Explore the creative models, including the pink‑purple cathedral and other generative artifacts.
    </p>
    <!-- Add model cards here -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="rounded-lg border border-mkp-muted/30 bg-mkp-surface/60 p-4">
        <h3 class="font-semibold mb-1">Pink‑Purple Cathedral</h3>
        <p class="text-sm text-mkp-muted mb-2">A ceremonial generative model, blending sacred geometry and vibrant hues.</p>
        <span class="text-xs text-mkp-muted">Model ID: cathedral‑v1</span>
      </div>
      <!-- Add more models as needed -->
    </div>
  </section>
  <Footer />
</Layout>
