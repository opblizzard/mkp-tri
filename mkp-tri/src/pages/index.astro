---
import Layout from "@components/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import TransparencyPanel from "@components/TransparencyPanel.astro";
---

<Layout title="MKP-TRI Â· Living Codex" description="Sovereign archive of MK cycles and operations.">
  <Header />

  <section class="space-y-4">
    <h2 class="text-lg font-semibold">
      Living codex for MKP-TRI
    </h2>
    <p class="text-sm text-mkp-muted max-w-2xl">
      This site is a public, inspectable record of cycles, artifacts, and operations.
      Every change is a ceremonial checkpoint, bound to a commit and visible at the edge.
    </p>

    <div class="grid gap-4 md:grid-cols-3 mt-4">
      <a href="/codex" class="border border-mkp-muted/30 rounded-lg p-4 hover:border-mkp-accent transition-colors">
        <h3 class="text-sm font-semibold mb-1">Codex</h3>
        <p class="text-xs text-mkp-muted">
          Browse ceremonies, artifacts, and checkpoints in chronological order.
        </p>
      </a>
      <a href="/omni" class="border border-mkp-muted/30 rounded-lg p-4 hover:border-mkp-accent transition-colors">
        <h3 class="text-sm font-semibold mb-1">Omni</h3>
        <p class="text-xs text-mkp-muted">
          Interface for idea ingress and mythic systems architecture.
        </p>
      </a>
      <a href="/transparency" class="border border-mkp-muted/30 rounded-lg p-4 hover:border-mkp-accent transition-colors">
        <h3 class="text-sm font-semibold mb-1">Transparency</h3>
        <p class="text-xs text-mkp-muted">
          Deployment state, provenance, and CI/CD lineage.
        </p>
      </a>
    </div>
  </section>

  <TransparencyPanel />

  <Footer />
</Layout>
