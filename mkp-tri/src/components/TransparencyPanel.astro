---
interface TransparencyProps {
  lastSync?: string;
  sourceRepo?: string;
  currentBranch?: string;
}

const {
  lastSync = "Unknown",
  sourceRepo = "https://github.com/opblizzard/mkp-tri",
  currentBranch = "main"
} = Astro.props as TransparencyProps;
---

<section class="mt-8">
  <h2 class="text-sm font-semibold uppercase tracking-wide text-mkp-muted mb-2">
    Transparency
  </h2>
  <div class="code-shell space-y-1">
    <div>// public provenance</div>
    <div>repo: {sourceRepo}</div>
    <div>branch: {currentBranch}</div>
    <div>last_sync: {lastSync}</div>
  </div>
</section>
