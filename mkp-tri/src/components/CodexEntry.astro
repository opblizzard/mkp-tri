---
export interface CodexEntry {
  id: string;
  title: string;
  category: string;
  timestamp: string;
  description: string;
  tags?: string[];
}

const entry = Astro.props as CodexEntry;
---

<article class="border border-mkp-muted/30 rounded-lg p-4 mb-4 bg-mkp-surface/60">
  <header class="flex justify-between items-baseline mb-2">
    <h3 class="font-semibold text-sm">{entry.title}</h3>
    <span class="text-xs text-mkp-muted font-mono">{entry.timestamp}</span>
  </header>
  <p class="text-sm text-mkp-muted mb-2">
    {entry.description}
  </p>
  <div class="flex justify-between items-center text-xs text-mkp-muted">
    <span class="uppercase tracking-wide">{entry.category}</span>
    {entry.tags && entry.tags.length > 0 && (
      <div class="flex gap-1 flex-wrap">
        {entry.tags.map((tag) => (
          <span class="px-1.5 py-0.5 rounded bg-mkp-background border border-mkp-muted/30">
            #{tag}
          </span>
        ))}
      </div>
    )}
  </div>
</article>
